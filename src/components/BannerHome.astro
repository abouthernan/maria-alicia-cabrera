---
import { fetchAPI } from '../utils/api'

const { data } = await fetchAPI('/api/home-banner?populate=image')
const banner = data[0] || null

const { title, description, image, spanishVersion, englishVersion } = banner?.attributes || {}
const srcImage = image?.data?.attributes?.url || '/profile-book.png'
---

<section class="section">
  <div class="container">
    <div class="book">
      <img
        src={srcImage}
        alt="puede ser una caratula de una portada de un libro"
        class="book__img"
      />
    </div>
    <article class="description">
      <h2 class="title">{title || 'Libros'}</h2>
      <p class="note">{description || 'Descubre la colección de libros.'}</p>
      <nav class="nav">
        {spanishVersion && <a href={spanishVersion}>Descargar en español</a>}
        {englishVersion && <a href={englishVersion}>Descargar en inglés</a>}
        <a href="/biblioteca">Ver más libros</a>
      </nav>
    </article>
  </div>
</section>

<style>
  .section {
    background: var(--cream);
    padding: 8rem 0 4rem;
  }

  .container {
    display: grid;
  }

  .book {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    margin: 0 auto;
  }

  .book__img {
    width: 100%;
    height: 100%;
    aspect-ratio: 1/1;
    object-fit: contain;
  }

  .title {
    font-size: var(--font-sm);
    text-align: center;
  }

  .note {
    font-family: var(--font-body);
    text-align: justify;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1.5rem auto;
  }

  .nav a {
    font-size: var(--font-normal);
    font-family: var(--font-body);
    color: var(--green);
    padding-bottom: 0.1rem;
    border-bottom: 1px solid var(--green);
  }

  @media (min-width: 768px) {
    .container {
      min-height: 90vh;
      place-items: center;
      grid-template-columns: 1fr 1fr;
    }

    .book {
      max-width: 500px;
      max-height: 500px;
    }

    .title {
      font-size: var(--font-md);
      text-align: left;
      font-weight: 600;
    }

    .nav {
      margin: 0;
      justify-content: flex-end;
      column-gap: 2rem;
    }
  }
</style>
